@model Crawler.WebApplication.Models.TestResultsModel
@{
    ViewData["Title"] = "Test result page";
}

<div class="container mt-5">
    <div class="row border-bottom">
        <h1 class="h2">@Model.Url</h1>
    </div>

    <div class="row mt-5 table-responsive d-flex">
        <h1 class="h2">PERFORMANCE</h1>
        <table id="performanceTable" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th class="col">Url</th>
                    <th class="flex-column">Timing</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model.TestResults)
                {
                    <tr>
                        <td>@result.Url</td>
                        <td class="text-center">@result.ResponseTime</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>



    <div class="row mt-5 table-responsive">
        <h1 class="h2">URLs NOT FOUND AT WEBSITE</h1>
        <table id="onlySitemapUrlsTable" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Url</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var url in Model.UrlsFoundOnlyInSitemap)
                {
                    <tr>
                        <td>@url</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="row mt-5 table-responsive">
        <h1 class="h2">URLs NOT FOUND AT SITEMAP</h1>
        <table id="onlyWebsiteUrlsTable" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Url</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var url in Model.UrlsFoundOnlyInHtml)
                {
                    <tr>
                        <td>@url</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('#performanceTable').DataTable({
            searching: false,
            ordering: false,
            order: false,
            "pageLength": 50
        });
    });
    $(document).ready(function () {
        $('#onlySitemapUrlsTable').DataTable({
            searching: false,
            ordering: false,
            order: false,
            "pageLength": 50
        });
    });
    $(document).ready(function () {
        $('#onlyWebsiteUrlsTable').DataTable({
            searching: false,
            ordering: false,
            order: false,
            "pageLength": 50
        });
    });
</script>
